      "@context": "https://schema.org",
      "@type": "ProfilePage",
      "mainEntity": {
        "@type": "Person",
        "name": "Карпова Ольга",
        "url": siteURL,
        "image": `${siteURL}images/olga-karpova.jpg`,
        "jobTitle": "Нутрициолог-практик",
