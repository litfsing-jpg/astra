---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const base = import.meta.env.BASE_URL;
const title = "Блог о питании и нутрициологии | Карпова Ольга";
const description = "Все статьи нутрициолога Карповой Ольги: причины лишнего веса, дефицит витаминов, правильное питание, здоровые привычки.";
---

<Layout title={title} description={description}>
    <!-- Хлебные крошки -->
    <nav class="text-sm text-gray-500 mb-4 flex items-center gap-1">
        <a href={base} class="hover:text-[rgb(var(--accent))] transition-colors">Главная</a>
        <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        <span class="text-gray-700">Блог</span>
    </nav>

    <div class="text-center py-12">
        <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
            Все статьи о <span class="text-[rgb(var(--accent))]">питании и здоровье</span>
        </h1>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
            Нутрициология, дефицит витаминов, причины лишнего веса, здоровые привычки.
        </p>
    </div>

	<section class="mt-12">
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {posts.map((post) => (
                <PostCard post={post} />
            ))}
        </div>
    </section>
</Layout>
