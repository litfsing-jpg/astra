---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<article class="flex flex-col overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 bg-white">
  <div class="flex-shrink-0">
    <a href={`${base}blog/${post.slug}`}>
      <img class="h-48 w-full object-cover" src={post.data.image?.startsWith('http') ? post.data.image : `${base}${post.data.image?.replace(/^\//, '')}`} alt={post.data.title} loading="lazy" decoding="async" />
    </a>
  </div>
  <div class="flex flex-1 flex-col justify-between p-6">
    <div class="flex-1">
      <p class="text-sm font-medium text-[rgb(var(--accent))]">
        <a href={`${base}blog/${post.slug}`} class="hover:underline">
          {post.data.category || 'Статья'}
        </a>
      </p>
      <a href={`${base}blog/${post.slug}`} class="mt-2 block">
        <p class="text-xl font-semibold text-gray-900">
          {post.data.title}
        </p>
        <p class="mt-3 text-base text-gray-500 line-clamp-3">
          {post.data.description}
        </p>
      </a>
    </div>
    <div class="mt-6 flex items-center">
      <div class="flex-shrink-0">
        <img
          src={`${base}images/${post.slug.charCodeAt(0) % 2 === 0 ? 'olga-karpova.jpg' : 'olga-karpova-2.jpg'}`}
          alt="Карпова Ольга — нутрициолог"
          width="40"
          height="40"
          class="h-10 w-10 rounded-full object-cover"
          loading="lazy"
        />
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900">
          Карпова Ольга
        </p>
        <div class="flex space-x-1 text-sm text-gray-500">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('ru-RU', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        </div>
      </div>
    </div>
  </div>
</article>
