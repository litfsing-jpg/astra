---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<article class="flex flex-col overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 bg-white">
  <div class="flex-shrink-0">
    <a href={`/blog/${post.slug}`}>
      <img class="h-48 w-full object-cover" src={post.data.image} alt={post.data.title} />
    </a>
  </div>
  <div class="flex flex-1 flex-col justify-between p-6">
    <div class="flex-1">
      <p class="text-sm font-medium text-[rgb(var(--accent))]">
        <a href={`/blog/${post.slug}`} class="hover:underline">
          {post.data.category || 'Статья'}
        </a>
      </p>
      <a href={`/blog/${post.slug}`} class="mt-2 block">
        <p class="text-xl font-semibold text-gray-900">
          {post.data.title}
        </p>
        <p class="mt-3 text-base text-gray-500 line-clamp-3">
          {post.data.description}
        </p>
      </a>
    </div>
    <div class="mt-6 flex items-center">
      <div class="flex-shrink-0">
        <span class="sr-only">Максим Андреюк</span>
        <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
            MA
        </div>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900">
          Максим Андреюк
        </p>
        <div class="flex space-x-1 text-sm text-gray-500">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('ru-RU', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        </div>
      </div>
    </div>
  </div>
</article>
