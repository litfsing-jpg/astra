---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '@fontsource/montserrat';
import '@fontsource/open-sans';

interface Props {
	title: string;
	description?: string;
    image?: string;
    articleSchema?: boolean;
    publishDate?: string;
}

const { title, description = "Блог Карповой Ольги о здоровом образе жизни, питании и привычках.", image = "/seo-image.jpg", articleSchema, publishDate } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL;
const siteURL = Astro.site?.toString().replace(/\/$/, '') + base;

// Breadcrumbs
const pathSegments = Astro.url.pathname.replace(base, '').split('/').filter(Boolean);
const breadcrumbItems = [
	{ name: 'Главная', url: siteURL },
	...pathSegments.map((seg, i) => ({
		name: seg === 'blog' ? 'Блог' : decodeURIComponent(seg).replace(/-/g, ' '),
		url: siteURL + pathSegments.slice(0, i + 1).join('/') + '/'
	}))
];
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content={articleSchema ? "article" : "website"} />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.url)} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(image, Astro.url)} />
        
		<title>{title}</title>
        <ViewTransitions />

        {/* Person (Author) — всегда */}
        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "Person",
            "name": "Карпова Ольга",
            "url": siteURL,
            "jobTitle": "Эксперт по здоровому образу жизни и питанию",
            "sameAs": []
        })} />

        {/* WebSite — всегда */}
        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "WebSite",
            "name": "Блог Карповой Ольги",
            "url": siteURL,
            "description": "Практические советы, исследования и рекомендации по здоровому образу жизни и питанию",
            "inLanguage": "ru"
        })} />

        {/* BreadcrumbList — всегда */}
        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "BreadcrumbList",
            "itemListElement": breadcrumbItems.map((item, i) => ({
                "@type": "ListItem",
                "position": i + 1,
                "name": item.name,
                "item": item.url
            }))
        })} />

        {/* BlogPosting + MedicalWebPage — для статей */}
        {articleSchema && (
            <script type="application/ld+json" set:html={JSON.stringify({
                "@context": "https://schema.org",
                "@type": ["BlogPosting", "MedicalWebPage"],
                "headline": title,
                "description": description,
                "image": [new URL(image, Astro.url).toString()],
                "datePublished": publishDate,
                "dateModified": publishDate,
                "inLanguage": "ru",
                "mainEntityOfPage": {
                    "@type": "WebPage",
                    "@id": canonicalURL.toString()
                },
                "author": {
                    "@type": "Person",
                    "name": "Карпова Ольга",
                    "url": siteURL
                },
                "publisher": {
                    "@type": "Person",
                    "name": "Карпова Ольга"
                }
            })} />
        )}
	</head>
	<body class="bg-gray-50 flex flex-col min-h-screen">
        <Header />
		<main class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>
        <Footer />
	</body>
</html>
